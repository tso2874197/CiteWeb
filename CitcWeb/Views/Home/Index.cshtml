@model IEnumerable<CitcWeb.Domain.LifePicture>
@{
    ViewBag.Title = "首頁";
}

<hr />
<div class="container">
    <div class="carousel slide" data-ride="carousel" id="carousel-demo">
        <ol class="carousel-indicators">
            @for (var i = 0; i < Model.Count(); i++)
            {
                if (i == 0)
                {
                    <li data-target="#carousel-demo" data-slide-to="i" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel-demo" data-slide-to="i"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
           @{
               var isFirst = true;
           }

            @foreach (var item in Model)
                    {
                        if(isFirst)
                        {
                            isFirst = false;

            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Upload/LifePictures/@item.PicturePath" alt="@item.PictureInfo">
            </div>
                }
                else
                {
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Upload/LifePictures/@item.PicturePath" alt="@item.PictureInfo">
            </div>
                }
            }
            <a href="#carousel-demo" class="carousel-control-prev carousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a href="#carousel-demo" class="carousel-control-next" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
</div>




@section styles
    {
    <style>
        .carousel .carousel-item {
                max-height:480px;
        }

            .carousel .carousel-item img {
                max-height:480px;
                object-fit:cover;
            }

    </style>
    }