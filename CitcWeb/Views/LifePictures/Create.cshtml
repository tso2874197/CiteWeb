@model CitcWeb.Domain.LifePicture

@{
    ViewBag.Title = "Create";
}

<h2>上傳檔案</h2>


@using (Html.BeginForm("Create","LifePictures",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>生活花絮</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">選擇檔案</label>
        <div class="col-md-10">
            <input type="file" name="file">
        </div>
    </div>

    <div class="form-group">
        是否顯示
        <div class="col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(model => model.IsValid)
                @Html.ValidationMessageFor(model => model.IsValid, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        照片說明
        <div class="col-md-10">
            @Html.EditorFor(model => model.PictureInfo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PictureInfo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="新增" class="btn btn-warning" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("返回", "Index",null,new { @class="btn btn-info"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
