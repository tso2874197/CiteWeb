@model CitcWeb.Domain.ClassInfo

@{
    ViewBag.Title = "新增班隊";
}

<h2>新增班隊</h2>

@using (Html.BeginForm("Create","ClassInfo",FormMethod.Post,new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">選擇檔案</label>
        <div class="col-md-10">
            <input type="file" name="file">
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-success" />
            </div>
        </div>
    </div>
}


