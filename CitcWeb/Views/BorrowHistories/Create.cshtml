@model CitcWeb.Domain.BorrowHistory

@{
    ViewBag.Title = "借閱圖書";
}

<h2>借閱圖書</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            借閱書籍
            <div class="col-md-10">
                @Html.DropDownList("BookInfoSn", null,"請選擇", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BookInfoSn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            班隊
            <div class="col-md-10">
                @Html.DropDownList("ClassInfoSn", null,"請選擇", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClassInfoSn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            學員生姓名
            <div class="col-md-10">
                @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control",required="required" } })
                @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-info" })
</div>

@section styles{

    <link href="~/Content/select2.min.css" rel="stylesheet" />
}
@section scripts{

    <script src="~/Scripts/select2.full.min.js"></script>
    <script>
        $(function () {
            $("select").select2();
        });
    </script>
}
