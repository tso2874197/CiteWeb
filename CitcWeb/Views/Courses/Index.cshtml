@model IEnumerable<CitcWeb.Domain.Course>

@{
    ViewBag.Title = "課程";
}

<h2>課程</h2>

<p>
    @Html.ActionLink("新增", "Create",null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            課程名稱
        </th>
        <th>
            是否繼續開課
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsExist)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Sn }) |
            @Html.ActionLink("Details", "Details", new { id=item.Sn }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Sn })
        </td>
    </tr>
}

</table>
